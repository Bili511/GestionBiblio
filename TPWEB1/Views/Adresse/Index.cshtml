@model IEnumerable<TPWEB1.Models.Adresses>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Adresses des membres</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Numéro_civique)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ville)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code_postal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Numéro_civique)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ville)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Code_postal)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idAdresse }) |
            @Html.ActionLink("Details", "Details", new { id=item.idAdresse }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idAdresse })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Retour à la liste des membres", "Index", "Membre")
</div>
